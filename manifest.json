{
    "version": "1.0.0",
    "manifest_version": 2,

    "name": "__MSG_appName__",
    "description": "__MSG_appDesc__",
    "default_locale":"zh_CN",

    "content_scripts": [
        {
            "matches": ["http://*/*", "https://*/*"],
            "js": ["main.js"],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": ["background.js"]
    },
    "browser_action": {
        "default_title": "YYF Debugger"
    },

    "permissions":
    [
        "webRequest",
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
